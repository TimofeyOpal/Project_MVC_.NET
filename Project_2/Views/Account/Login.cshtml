@model Project_2.Models.LoginModel
    <center>
        <h2 style="position:relative; z-index:15; padding-top: 15%;">Вход на сайт</h2>

        <a style="position:relative; z-index:15; padding-top: 15%;" asp-action="Register" asp-controller="Account">Регистрация</a>
    </center>

<section class="register_section">
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label class="label" asp-for="UserName">Введите Ваше пользовательское имя</label><br />
                <input class="input" type="text" asp-for="UserName" />
                <span asp-validation-for="UserName" />
            </div>
            <div class="form-group">
                <label class="label" asp-for="Email">Введите Email</label><br />
                <input class="input" type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>

            <div class="form-group">
                <label class="label" asp-for="Password">Введите пароль</label><br />
                <input class="input" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input class="but" type="submit" value="Войти" />
            </div>
        </div>


    </form>
</section>
<div class="logo"></div>